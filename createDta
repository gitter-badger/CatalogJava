import java.io.File;
import java.io.FilenameFilter;
import java.util.HashMap;
import java.util.Map;

public class CreateData {

    Map<String, String> zip;
    Map<String, String> mp3;
    File file;
    String[] nameFolder = new String[] { "MP3", "Archive"};

    protected String archive = "Archive";

    public void createData () {

        zip = new HashMap<String, String>();
        mp3 = new HashMap<String, String>();

        zip.put(archive, ".zip/.gzip//Home/jashka/Downloads");
        mp3.put("MP3", ".mp3/.wav//Home/jashka/Downloads");

        for (String fileN : nameFolder) {

            String newFileName = zip.get(fileN);
            System.out.print(newFileName);

        }

        File folder = new File("/home/jashka/Загрузки");
        String[] files = folder.list(new FilenameFilter() {
            @Override
            public boolean accept(File folder, String name) {
                return name.endsWith(".apk");
            }
        });

        for ( String fileName : files) {
            System.out.print("File" + fileName + "\n");
        }
    }

}
